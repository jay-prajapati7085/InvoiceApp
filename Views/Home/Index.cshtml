@model Product
@{
    ViewData["Title"] = "Home Page";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5 text-center">
                    <h1 class="display-4 mb-4 fw-bold text-primary">Welcome</h1>
                    <div class="d-flex flex-wrap justify-content-center gap-4 mb-5">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg px-4 py-2 rounded-pill shadow-sm">
                            Add Product
                        </a>
                        <a href="@Url.Action("Create", "Order")" class="btn btn-success btn-lg px-4 py-2 rounded-pill shadow-sm">
                            Add Order
                        </a>
                        <a href="@Url.Action("OrderList", "Order")" class="btn btn-info btn-lg px-4 py-2 rounded-pill shadow-sm">
                            View Order List
                        </a>
                    </div>
                    <form asp-controller="Order" asp-action="BulkExport" method="get" target="_blank" class="mt-4">
                        <div class="row g-3 justify-content-center">
                            <div class="col-md-4">
                                <label for="fromDate" class="form-label fw-semibold">From Date:</label>
                                <input type="date" id="fromDate" class="form-control form-control-lg" name="fromDate" required />
                            </div>
                            <div class="col-md-4">
                                <label for="toDate" class="form-label fw-semibold">To Date:</label>
                                <input type="date" id="toDate" class="form-control form-control-lg" name="toDate" required />
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill shadow-sm">
                                    Bulk Export PDFs
                                </button>
                            </div>
                        </div>
                    </form>
                    <!-- Preview Invoice Form -->
                    <form asp-controller="Order" asp-action="PreviewInvoice" method="get" target="_blank" class="mt-5">
                        <div class="row g-3 justify-content-center align-items-end">
                            <div class="col-md-6">
                                <label for="invoiceId" class="form-label fw-semibold">Invoice ID:</label>
                                <input type="number" id="invoiceId" name="id" class="form-control form-control-lg" placeholder="Enter Invoice ID" required />
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-warning btn-lg w-100 rounded-pill shadow-sm">
                                    Preview Invoice
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



