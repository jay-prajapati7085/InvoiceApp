@model Product
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="form-inline">
        <div class="form-group">
            @Html.ActionLink("Add Product", "Index", "Product")
        </div>
        <div class="form-group">
            @Html.ActionLink("Add Order", "Create", "Order")
        </div>
    </div>
    
</div>
<form asp-controller="Order" asp-action="BulkExport" method="get" target="_blank">
    <div class="form-group col-md-3">
        
            <label for="fromDate">From Date:</label>
        <input type="date" id="fromDate" class="form-control mb-2" data-provide="datepicker" name="fromDate" required />
        
        
            <label for="toDate">To Date:</label>
        <input type="date" id="toDate" class="form-control mb-2" data-provide="datepicker" name="toDate" required />
        <button type="submit" class="btn btn-success">Bulk Export PDFs</button>
    </div>

